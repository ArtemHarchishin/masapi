package ch.capi.net{	import ch.capi.errors.DataError;	import flash.errors.IllegalOperationError;		import ch.capi.data.DictionnaryMap;		/**	 * Utility class to register the named <code>ICompositeMassLoader</code> instances. 	 * 	 * @see			ch.capi.net.ICompositeMassLoader ICompositeMassLoader	 * @author		Cedric Tabin - thecaptain	 * @version		1.0	 */	public class CompositeMassLoaderRegisterer	{		//---------//		//Constants//		//---------//				//---------//		//Variables//		//---------//		private static var __compositeMassLoaders:DictionnaryMap	= new DictionnaryMap();				//--------------//		//Public methods//		//--------------//		/**		 * Enumerates all the <code>ICompositeMassLoader</code> registered.		 * 		 * @return	An <code>Array</code> containing the names of the registered <code>ICompositeMassLoader</code>.		 */		public static function enumerateAll():Array		{			return __compositeMassLoaders.keys();		}		/**		 * Retrieves the specified <code>ICompositeMassLoader</code>.		 * 		 * @param	cmlName	The name of the <code>ICompositeMassLoader</code>.		 * @return	The <code>ICompositeMassLoader</code> or <code>null</code> if the specified		 * 			name doesn't exist.			 */		public static function get(cmlName:String):ICompositeMassLoader		{			return __compositeMassLoaders.getValue(cmlName) as ICompositeMassLoader;		}		/**		 * Registers the specified <code>ICompositeMassLoader</code>. It must be named otherwise		 * a <code>IllegalOperationError</code> will be thrown.		 * 		 * @param	cml		The <code>ICompositeMassLoader</code>.		 * @throws	IllegalOperationError	If the <code>ICompositeMassLoader</code> is not named.		 * @throws	ch.capi.errors.DataError	If an <code>ICompositeMassLoader</code> with the same name		 * 						already exists.		 */		public static function register(cml:ICompositeMassLoader):void		{			if (cml.name == null) throw new IllegalOperationError("The CompositeMassLoader is not named");			if (get(cml.name) != null) throw new DataError("The CompositeMassLoader '"+cml.name+"' already exist");			__compositeMassLoaders.put(cml.name, cml);		}		//-----------------//		//Protected methods//		//-----------------//				//---------------//		//Private methods//		//---------------//	}}