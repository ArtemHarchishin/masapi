#!/bin/sh

dir_name=`dirname $0`
cmd_name=`basename $0`

source "$dir_name/config"
cd "$dir_name/.."

if [ $# -ne 1 ]; then
	echo "Missing sample name" >&2
	echo "Usage : $cmd_name sample_name"
	echo "        $cmd_name list"
	exit
fi

if [ $1 = "list" ]; then
	cd "$samples_path/$samples_root_package"
	echo "Allowed sample names :"
	for sample in *; do
		if [ -d $sample ]; then
			echo "  $sample"
		fi
	done
	exit
fi

output_name="./$samples_path/$1.swf"
sample_root_file="./$samples_path/$samples_root_package/$1/$samples_root_file"

$flex_sdk_path/mxmlc -use-network=false -as3 -compiler.source-path "$samples_path" "$source_path" -output "$output_name" -strict -optimize -target-player "$target_player" "$sample_root_file"
