package ch.capi.utils.logging{	/**	 * 	 * 	 * @author		Cedric Tabin - thecaptain	 * @version		1.0	 */	public class TraceHandler implements ILogHandler	{		//-----------//		//Constructor//		//-----------//				/**		 * Creates a new <code>TraceLogger</code> object.		 */		public function TraceHandler():void {}				//--------------//		//Public methods//		//--------------//		/**		 * Process the log information.		 * 		 * @param	level		The logging level.		 * @param	text		The text to log.		 * @param	methodPath	The method complete name.				 */		public function log(level:int, text:String, methodPath:String=null):void		{			var levelName:String = "["+LogLevel.getAsString(level)+"]";						if (methodPath == null) trace(levelName, text);			else trace(levelName, methodPath+":", text);		}	}}