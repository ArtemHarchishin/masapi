package masapi.sample07{	import flash.events.Event;	import ch.capi.net.LoadableFileType;	import ch.capi.net.DataType;	import flash.display.Loader;	import ch.capi.net.ILoadableFile;	import flash.display.Sprite;	/**	 * 	 * 	 * @author		Cedric Tabin - thecaptain	 * @version		1.0	 */	public class PictureBox extends Sprite	{		//---------//		//Constants//		//---------//		public static const SIZE:int = 130;				//---------//		//Variables//		//---------//		private var _picture:ILoadableFile;		private var _loader:Loader;				//-----------------//		//Getters & Setters//		//-----------------//				//-----------//		//Constructor//		//-----------//				/**		 * Creates a new <code>PictureBox</code> object.		 */		public function PictureBox(picture:ILoadableFile):void		{			_picture = picture;						init();		}				//--------------//		//Public methods//		//--------------//		//-----------------//		//Protected methods//		//-----------------//				protected function paint(evt:Event=null):void		{			_loader.content.width = SIZE;			_loader.content.height = SIZE;						addChild(_loader);		}				//---------------//		//Private methods//		//---------------//		private function init():void		{			_loader = _picture.getData(DataType.LOADER);						//--- NOTE : This part is not necessary once you know which type of file you're loading			//-----------------------------------------------------------			if (_picture.getType() == LoadableFileType.BINARY)			{				//as the file is binary, we must wait for the init event				_loader.contentLoaderInfo.addEventListener(Event.INIT, paint);					}			else			{				//the file type is directly a Loader				paint();			}			//-----------------------------------------------------------		}	}}