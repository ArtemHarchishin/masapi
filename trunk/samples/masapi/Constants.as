package masapi{	import ch.capi.data.IMap;			/**	 * Contains the constants for the samples.	 * 	 * @author		Cedric Tabin - thecaptain	 * @version		1.0	 */	public class Constants	{		//---------//		//Constants//		//---------//		public static const RESOURCES_NAME:String = "RESOURCES";		public static const PICTURES_NAME:String = "PICTURES";		public static const XML_NAME:String = "XML";		public static const TXT_NAME:String = "TXT";				public static const RESOURCES_PATH:String = "../resources";		public static const PICTURES_PATH:String = RESOURCES_PATH+"/pictures";		public static const XML_PATH:String = RESOURCES_PATH+"/xml";		public static const TXT_PATH:String = RESOURCES_PATH+"/txt";				//--------------//		//Public methods//		//--------------//				/**		 * Puts all the constants into the specified <code>IMap</code>. The key		 * names ommit the _PATH suffix.		 */		public static function putConstants(map:IMap):void		{			map.put(RESOURCES_NAME, RESOURCES_PATH);			map.put(PICTURES_NAME, PICTURES_PATH);			map.put(XML_NAME, XML_PATH);			map.put(TXT_NAME, TXT_PATH);		}	}}